.detail .detail_area {
  padding-bottom: 90rpx;
}
.detail .detail_area .detail_swiper swiper {
  height: 100vw;
}
.detail .detail_area .detail_swiper swiper image {
  width: 100%;
}
.detail .detail_area .goods_price_row {
  padding: 10px 10px;
  display: flex;
}
.detail .detail_area .goods_price_row .goods_price {
  flex: 5;
  color: var(--themeColor);
}
.detail .detail_area .goods_price_row .goods_price .price_number {
  font-size: 30px;
  font-weight: bold;
}
.detail .detail_area .goods_price_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.detail .detail_area .goods_price_row .goods_collect .collect_text {
  font-size: 10px;
}
.detail .detail_area .goods_name {
  padding: 0px 10px;
  letter-spacing: 1px;
  line-height: 25px;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-weight: bold;
  font-size: 16px;
  border-bottom: 3px solid #dcdcdc;
}
.detail .detail_area .goods_info .goods_info_title {
  margin: 10px 150px 7px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 3px solid var(--themeColor);
  font-size: 16px;
  font-weight: bold;
}
.detail .btm_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  height: 90rpx;
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #dcdcdc;
}
.detail .btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  position: relative;
}
.detail .btm_tool .tool_item button {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
}
.detail .btm_tool .tool_item .goods_cart_num {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 24rpx;
  width: 20rpx;
  right: 26rpx;
  top: 0;
  font-size: 10px;
  background-color: #fff;
}
.detail .btm_tool .btm_cart {
  margin: 4px 2px;
  flex: 2;
  font-size: 14px;
  font-weight: bold;
  color: #fff;
  background-color: #ffa500;
  border-radius: var(--themeRadius);
}
.detail .btm_tool .btm_buy {
  margin: 4px 2px;
  flex: 2;
  font-size: 14px;
  font-weight: bold;
  color: #fff;
  background-color: var(--themeColor);
  border-radius: var(--themeRadius);
}
