page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 80rpx);
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
  background-color: #f5f5f5;
}
.cates .cates_container .left_menu .menu_item {
  margin: 50rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  height: 30rpx;
}
.cates .cates_container .left_menu .active {
  font-size: 30rpx;
  font-weight: bold;
  border-left: 10rpx solid var(--themeColor);
}
.cates .cates_container .right_content {
  flex: 6;
  display: flex;
  flex-direction: column;
}
.cates .cates_container .right_content .goods_area {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-top: 20rpx solid #fff;
}
.cates .cates_container .right_content .goods_area:nth-last-child(-n+1) {
  border-bottom: 20rpx solid #fff;
}
.cates .cates_container .right_content .goods_area .goods_group {
  width: 95%;
  display: flex;
  flex-direction: column;
  box-shadow: 0rpx 0rpx 10rpx 10rpx #f5f5f5;
  border-radius: var(--themeRadius);
}
.cates .cates_container .right_content .goods_area .goods_group .goods_title {
  padding: 10rpx 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  overflow: hidden;
}
.cates .cates_container .right_content .goods_area .goods_group .goods_list {
  flex-direction: row;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  align-items: center;
  align-content: space-evenly;
}
.cates .cates_container .right_content .goods_area .goods_group .goods_list navigator {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  padding: 10rpx;
}
.cates .cates_container .right_content .goods_area .goods_group .goods_list navigator image {
  width: 100%;
}
.cates .cates_container .right_content .goods_area .goods_group .goods_list navigator .goods_name {
  font-size: 28rpx;
}
