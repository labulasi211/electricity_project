.cart_area .user_info_row {
  padding: 50rpx 10rpx 30rpx 10rpx;
  border-radius: 0 0 var(--themeRadius) var(--themeRadius);
  box-shadow: 0rpx 0rpx 10rpx 10rpx #f5f5f5;
  display: flex;
  font-size: 26rpx;
}
.cart_area .user_info_row .user_address {
  flex: 6;
  border-right: 4rpx solid #666;
  padding-left: 20rpx;
  display: flex;
  align-content: center;
  justify-content: flex-start;
}
.cart_area .user_info_row .user_phone {
  flex: 3;
  display: flex;
  align-content: center;
  justify-content: center;
}
.cart_area .cart_content {
  padding-bottom: 90rpx;
}
.cart_area .cart_content .cart_main .cart_item {
  margin: 20rpx 0;
  width: 100%;
  display: flex;
  padding: 30rpx 25rpx;
  border-radius: var(--themeRadius);
  box-shadow: 0 0 10rpx 10rpx #f5f5f5;
}
.cart_area .cart_content .cart_main .cart_item .cart_chk_wrap {
  flex: 1;
  display: flex;
  align-items: center;
}
.cart_area .cart_content .cart_main .cart_item .cart_chk_wrap radio {
  transform: scale(0.8);
}
.cart_area .cart_content .cart_main .cart_item .cart_img_wrap {
  flex: 3;
  border-radius: calc(var(--themeRadius)*0.5);
  overflow: hidden;
}
.cart_area .cart_content .cart_main .cart_item .cart_img_wrap image {
  width: 100%;
  overflow: hidden;
  border-radius: var(--themeRadius)/2;
}
.cart_area .cart_content .cart_main .cart_item .cart_info_wrap {
  padding-left: 20rpx;
  flex: 6;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.cart_area .cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
  word-break: break-all;
  font-size: 26rpx;
}
.cart_area .cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.cart_area .cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-weight: bold;
}
.cart_area .cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
  align-items: center;
}
.cart_area .cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .num_edit {
  font-weight: bold;
  padding: 0rpx 10rpx;
}
.cart_area .cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70rpx;
  height: 30rpx;
  font-size: 24rpx;
  border-radius: calc(ver(--themeRadius)*0.5);
  background-color: #e0dfdf;
}
.cart_area .footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  border-top: 1px solid #f0f0f0;
  padding: 5rpx 25rpx;
  background-color: #fff;
}
.cart_area .footer_tool .all_chk_wrap {
  display: flex;
  align-items: center;
  flex: 1;
  font-size: 26rpx;
}
.cart_area .footer_tool .all_chk_wrap radio {
  transform: scale(0.8);
}
.cart_area .footer_tool .total_price {
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  font-size: 32rpx;
  padding-right: 20rpx;
}
.cart_area .footer_tool .total_price .total_price_text {
  font-weight: bold;
}
.cart_area .footer_tool .order_pay_wrap {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--themeColor);
  border-radius: calc(var(--themeRadius)*2);
}
.cart_area .footer_tool .order_pay_wrap .order_pay_text {
  font-weight: bolder;
  color: #fff;
}
.none_goods {
  position: absolute;
  background-color: #e2e2e2;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.none_goods text {
  color: #a0a0a0;
  font-size: 80rpx;
  font-weight: bolder;
}
