@import "./styles/iconfont.wxss";


/* 在微信中不支持通配符“*” */
page,view,text,swiper,swiper-item,navigator,image
{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/*
主题颜色为红色，可以通过变量来实现
  其中less是可以支持变量的
  原生的css和wxss都是支持变量
*/
page{
    /* 定义主题颜色变量 */
    --themeColor:#c20e0d;
    /* 定义主题左右边距 */
    --themeRightMargin:calc(750rpx*0.04);
    /* 定义主题上下边距 */
    --themeUpMargin:calc(340rpx*0.04);
    /* 定义主题圆角角度 */
    --themeRadius:35rpx;
    /* 定义统一的字体大小 */
    font-size: 28rpx;
}